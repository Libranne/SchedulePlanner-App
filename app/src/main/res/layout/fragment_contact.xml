<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".fragment.ContactFragment">

<!-- TODO: Update blank fragment layout -->
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#79D5E1"
    tools:context=".Splash">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="268dp"
        android:text="Schedule Planner"
        android:textColor="#DF704D"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgview"
        android:layout_width="175dp"
        android:layout_height="125dp"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/textview"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bk" />

    <TextView
        android:id="@+id/textmail"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="SchedulePlanner@gmail.com"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/textview"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Project Android Kotlin Developed by Can Minh Hieu."
        android:textSize="18sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textmail"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>